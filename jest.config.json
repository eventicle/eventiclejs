{
    "transform": {
        "^.+\\.ts?$": ["ts-jest", {
            "tsconfig": {
                "sourceMap": true,
                "inlineSourceMap": true
            }
        }]
    },
    "clearMocks": true,
    "fakeTimers": {
        "enableGlobally": false
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "/test/.*\\.(test|integration)?\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
